	<script src="/js/moment.min.js"></script>
	<script src="/js/livestamp.min.js"></script>
	<script src="/js/custom.js"></script>

</head> 
<body> 
<div id="choisir_ville" data-role="page" data-add-back-btn="true" data-dom-cache="false">


	<div id="branding">
		<h1 class="pageheader"><center>{{category}}</center></h1>
		<a data-theme="a" href="#" class="back-button" data-rel="back" data-icon="arrow-l"><img id="back-arrow" src="/images/left-arrow-brown.png"/></a>
	</div>

	<div data-role="content">
	
	<div class="choice_list"> 
	<h1> Please choose a place to study. </h1>
	
	<ul id="mylist" data-role="listview" data-inset="true" data-filter="true">
	{{#each locations}}
		<li data-filtertext="{{description}} {{utilities}} {{region}}">
			<a href="/place/details/{{name}}" data-ajax="false"> 
				<h2>{{name}}</h2>
				<h6 class="description">{{description}}</h6>
				<div class="fullness {{level}}"></div>

				<span class="time-label">
					Last Updated: <span data-livestamp="{{dateUpdated}}">{{dateUpdated}}</span>
				</span>
			</a>

		</li>
	{{/each}}
	</ul>	

	</div>
	</div>
